<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:id="@+id/frame_info"
    android:layout_width="match_parent"
    >
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/progress_Spinner_info"
        />

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_act_product_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.gautam.foodhunt.ActProductInfo"
    >





    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/A_name"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/A_description"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_margin="20dp"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/A_sold"
        />
        <FrameLayout
            android:layout_width="match_parent"
            android:id="@+id/frame_control"
            android:layout_height="110dp">

        </FrameLayout>




    <android.support.v7.widget.RecyclerView
        android:clipToPadding="false"
        android:paddingTop="0dp"
        android:layout_width="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:id="@+id/comment_recycler"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
       android:paddingBottom="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:layout_marginLeft="20dp"
        android:text="Similar Items"
        android:fontFamily="sans-serif-smallcaps"
        />
    <android.support.v7.widget.RecyclerView

        android:clipToPadding="false"
        android:layout_width="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:id="@+id/product_recycler"
        android:layout_height="wrap_content"/>

</LinearLayout>

</FrameLayout>


